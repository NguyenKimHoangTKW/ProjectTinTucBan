@{
    ViewBag.Title = "Đăng nhập";
    Layout = null;
    var returnUrl = ViewBag.ReturnUrl ?? Request.QueryString["ReturnUrl"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            background-image: url('@Url.Content("~/Areas/assets/images/nen.jpg")');
            background-size: cover; background-position: center center; background-repeat: no-repeat;
            min-height: 100vh; margin: 0; display: flex; align-items: center; justify-content: center;
            padding: 15px; box-sizing: border-box;
        }
        .login-form {
            background: rgba(255, 255, 255, 0.85); border-radius: 12px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.15); padding: 32px 24px;
            max-width: 400px; width: 100%;
        }
        .login-form .form-control { border-radius: 8px; }
        .login-form .input-group-text { background: #f8f9fa; border-radius: 8px 0 0 8px; }
        .login-form h2 { font-weight: 600; color: #333; }
        .or-separator { text-align: center; margin: 15px 0; color: #6c757d; }
        .btn-google { background-color: #DB4437; color: white; }
        .btn-google:hover { background-color: #c23321; color: white; }
        #error-message { display: none; } /* Ẩn ô thông báo lỗi ban đầu */
    </style>
</head>
<body>
    <div class="login-form">
        <h2 class="text-center mb-4">Đăng nhập quản trị</h2>

        <div id="error-message" class="alert alert-danger"></div>

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }

        <form id="login-form-api">
            @* Thêm ID và bỏ các helper của Razor *@
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                <label for="username">Tên đăng nhập</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-user"></i></span></div>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Nhập tên đăng nhập" required />
                </div>
            </div>
            <div class="form-group mb-4">
                <label for="password">Mật khẩu</label>
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-lock"></i></span></div>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu" required />
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
        </form>

        <div class="or-separator"><small>HOẶC ĐĂNG NHẬP BẰNG</small></div>

        @* Đăng nhập Google vẫn giữ nguyên cơ chế cũ vì nó phức tạp hơn để chuyển sang API thuần túy *@
        @using (Html.BeginForm("ExternalLogin", "API", new { Area = "Admin", ReturnUrl = returnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-google btn-block mb-3" name="provider" value="Google" title="Đăng nhập bằng tài khoản Google của bạn">
                <i class="fab fa-google mr-2"></i> Đăng nhập với Google
            </button>
        }
        <div class="text-center mt-2">
            <a href="@Url.Action("Register", "API", new { Area = "Admin" })">Chưa có tài khoản? Đăng ký ngay</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>$(document).ready(function () {
            $('#login-form-api').on('submit', function (e) {
                e.preventDefault(); // Ngăn form submit theo cách truyền thống

                var username = $('#username').val();
                var password = $('#password').val();
                var token = $('input[name="__RequestVerificationToken"]').val(); // Lấy token chống CSRF

                var $errorMessage = $('#error-message');
                $errorMessage.hide(); // Ẩn thông báo lỗi cũ

                $.ajax({
                    url: '/api/auth/login', // URL của Web API endpoint
                    type: 'POST',
                    contentType: 'application/json',
                    headers: {
                        'RequestVerificationToken': token // Gửi token trong header nếu Web API của bạn có validate nó
                    },
                    data: JSON.stringify({
                        Username: username,
                        Password: password
                    })
                })
                .done(function (response) {
                    // Nếu thành công, API trả về { success: true, redirectUrl: '...' }
                    if (response.success) {
                        window.location.href = response.redirectUrl; // Chuyển hướng đến trang dashboard
                    }
                })
                .fail(function (jqXHR, textStatus, errorThrown) {
                    // Nếu thất bại, API trả về lỗi
                    var errorMsg = "Đã xảy ra lỗi không xác định.";
                    if (jqXHR.responseJSON && jqXHR.responseJSON.Message) {
                        errorMsg = jqXHR.responseJSON.Message;
                    }
                    $errorMessage.text(errorMsg).show(); // Hiển thị thông báo lỗi
                });
            });
        });</script>
</body>
</html>