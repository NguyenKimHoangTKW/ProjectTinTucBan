@{
    ViewBag.Title = "BaiViet";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid main-content py-3">
    <!-- ========== Danh sách Bài Viết ========== -->
    <h2>Bài Viết</h2>
    <button id="btnThemBaiViet" class="btn btn-success mb-3">Thêm bài viết</button>

    <div class="table-responsive p-3">
        <table id="table_load_baiviet" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="d-none">ID</th>
                    <th class="text-center">STT</th>
                    <th>Tiêu đề</th>
                    <th>Nội dung</th>
                    <th>Ngày đăng</th>
                    <th>Ngày cập nhật</th>
                    <th>Thumbnail</th>
                    <th>PDF</th>
                    <th>Lượt xem</th>
                    <th class="text-center" style="width: 120px;">Hành động</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- ========== Modal Thêm / Sửa Bài Viết ========== -->
<div class="modal fade" id="modalBaiViet" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form id="form_baiviet" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Thêm/Sửa Bài Viết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="BaiVietID" />

                <div class="form-group">
                    <label for="TieuDe">Tiêu đề</label>
                    <input type="text" class="form-control" id="TieuDe">
                </div>

                <div class="form-group">
                    <label for="NoiDung">Nội dung</label>
                    <textarea id="NoiDung" class="form-control" rows="10"></textarea>
                </div>

                <div class="form-group">
                    <label for="ThumbnailFile">Thumbnail</label>
                    <div class="input-group mb-2">
                        <input type="file" id="ThumbnailFile" class="form-control-file" accept="image/*" />
                        <div class="input-group-append">
                            <button type="button" class="btn btn-outline-secondary" id="btnChonThumbnail">Chọn từ thư viện</button>
                        </div>
                    </div>
                    <input type="hidden" id="LinkThumbnail" />
                    <div id="previewThumbnail" class="mt-2"></div>
                </div>

                <div class="form-group">
                    <label for="PdfFile">Upload PDF</label>
                    <input type="file" id="PdfFile" class="form-control-file" accept="application/pdf" />
                    <input type="hidden" id="LinkPDF" />
                    <div id="previewPDF" class="mt-2"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal Thư viện ảnh -->
<div class="modal fade" id="modalThuVienAnh" tabindex="-1" role="dialog" aria-labelledby="modalThuVienAnhLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chọn ảnh từ thư viện</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="thuVienAnh" class="d-flex flex-wrap"></div>
            </div>
        </div>
    </div>
</div>


