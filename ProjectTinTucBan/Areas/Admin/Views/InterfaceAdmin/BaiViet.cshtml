﻿@{
    ViewBag.Title = "BaiViet";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        background-color: white !important;
    }

    .main-content {
        padding: 20px;
        margin-top: 70px;
    }

    .main-content,
    .page-container {
        background-color: white !important;
    }

    .table-responsive {
        padding: 10px;
        background-color: #fff;
    }

    #table_load_baiviet {
        width: 100%;
        background-color: #fff;
        /*        table-layout: fixed;*/
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        overflow: hidden;
    }

        #table_load_baiviet th,
        #table_load_baiviet td {
            padding: 10px 8px;
            font-size: 14px;
            vertical-align: middle;
            white-space: normal;
            word-break: break-word;
        }

        #table_load_baiviet,
        #table_load_baiviet th,
        #table_load_baiviet td {
            border: 1px solid #dee2e6 !important;
            border-collapse: collapse !important;
            background-color: #fff;
        }

            #table_load_baiviet thead th {
                background-color: #5a8dee;
                color: white;
                text-align: center;
                font-weight: 600;
            }

            #table_load_baiviet td {
                text-align: center;
            }
                /* Cột STT (cột số 2) */
                #table_load_baiviet th:nth-child(2),
                #table_load_baiviet td:nth-child(2) {
                    width: 50px;
                }
                /* Cột Tiêu đề (cột số 3) */
                #table_load_baiviet td:nth-child(3) {
                    text-align: left;
                }
                /* Cột Mục lục (cột số 5) */
                #table_load_baiviet td:nth-child(5) {
                    text-align: left !important;
                }

                /* Cột nội dung (cột số 4) */
                #table_load_baiviet th:nth-child(4),
                #table_load_baiviet td:nth-child(4) {
                    width: 80px; /* Hoặc giá trị phù hợp hơn tùy nhu cầu */
                    padding: 4px !important;
                }

                    /* Button "Xem" bên trong cột nội dung */
                    #table_load_baiviet td:nth-child(4) .btn-xem {
                        width: 100%;
                        display: block
                    }

            /* Cột Ngày đăng & Ngày cập nhật */
            #table_load_baiviet th:nth-child(6),
            #table_load_baiviet th:nth-child(7) {
                text-align: center;
                width: 10px;
            }

            #table_load_baiviet td:nth-child(6),
            #table_load_baiviet td:nth-child(7) {
                text-align: left;
                width: 120px;
            }


            /* Thumbnail */
            #table_load_baiviet td:nth-child(8) img {
                max-width: 80px;
                height: auto;
                border-radius: 4px;
            }

            /* Cột PDF */
            #table_load_baiviet th:nth-child(9),
            #table_load_baiviet td:nth-child(9) {
                width: 70px;
                padding: 5px;
            }

                #table_load_baiviet td:nth-child(9) button {
                    margin: 2px 0;
                    padding: 4px 8px;
                    font-size: 13px;
                }

            /* Cột hành động */
            #table_load_baiviet th:nth-child(10),
            #table_load_baiviet td:nth-child(10) {
                width: 100px;
            }

    .cke_contents {
        min-height: 400px !important;
    }

    .cke_notifications_area {
        display: none;
    }

    #previewPDF {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .pdf-preview-item {
        position: relative;
        background-color: #f5f5f5;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 8px 12px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        max-width: 300px;
        overflow: hidden;
        word-break: break-word;
    }

        .pdf-preview-item .pdf-name {
            flex-grow: 1;
            font-size: 14px;
            margin-right: 8px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .pdf-preview-item .remove-pdf {
            background-color: red;
            color: white;
            border: none;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 12px;
            line-height: 18px;
            text-align: center;
            cursor: pointer;
        }

    .modal-footer {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-end;
        gap: 10px;
    }

    @@media (max-width: 576px) {
        .modal-footer {
            justify-content: space-between;
        }

            .modal-footer .btn {
                flex: 0 0 48%;
                max-width: 48%;
            }
    }
</style>

<div class="container-fluid main-content py-3">
    <!-- ========== Danh sách Bài Viết ========== -->
    <!-- Header và breadcrumb -->
    <h2 class="header-title">BÀI VIẾT</h2>
    <hr />
    <div class="page-header">
        <h2 class="header-title">Quản lý bài viết</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/Admin/InterfaceAdmin/Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                <span class="breadcrumb-item active">Quản lý bài viết</span>
            </nav>
        </div>
    </div>
    <hr />
    <div class="row mb-3 align-items-center">
        <div class="col-md-4">
            <button id="btnThemBaiViet" class="btn btn-success">Thêm bài viết</button>
        </div>
        <div class="col-md-4 offset-md-4">
            <input type="text" id="searchKeyword" class="form-control" placeholder="Nhập từ khóa tìm kiếm...">
        </div>
    </div>
    <div id="tableAreaWrapper">
        <div id="tableWrapper" class="table-responsive p-3" style="display: none;">
            <table id="table_load_baiviet" class="table table-striped">
                <thead>
                    <tr>
                        <th class="d-none">ID</th>
                        <th class="text-center">STT</th>
                        <th class="text-center">Tiêu đề</th>
                        <th class="text-center">Nội dung</th>
                        <th class="text-center">Mục lục</th>
                        <th class="text-center">Ngày đăng</th>
                        <th class="text-center">Ngày cập nhật</th>
                        <th class="text-center">Thumbnail</th>
                        <th class="text-center" style="width: 120px;">PDF</th>
                        <th class="text-center">Lượt xem</th>
                        <th class="text-center" style="width: 120px;">Hành động</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <!-- Khu vực phân trang tự tạo -->
    <div id="paginationWrapper" class="pagination-container d-flex justify-content-end" style="display: none;">
        <ul id="pagination" class="pagination"></ul>
    </div>
    <!-- Loader -->
    <div id="loaderWrapper"></div>
</div>

<div class="modal fade" id="modalBaiViet" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <form id="form_baiviet" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Thêm/Sửa Bài Viết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="BaiVietID" />

                <!-- Tiêu đề -->
                <div class="form-group">
                    <label for="TieuDe">Tiêu đề</label>
                    <input type="text" class="form-control" id="TieuDe">
                </div>
                <!-- Mục lục -->
                <div class="form-group">
                    <label for="ID_MucLuc">Mục lục</label>
                    <select id="ID_MucLuc" name="ID_MucLuc" class="form-control">
                        <!-- Options will be populated by loadMucLucOptions() -->
                    </select>
                </div>

                <!-- Nội dung -->
                <div class="form-group">
                    <label for="NoiDung">Nội dung</label>
                    <textarea id="NoiDung" class="form-control" style="min-height: 300px;"></textarea>
                </div>

                <!-- Thumbnail -->
                <div class="form-group">
                    <label for="ThumbnailFile">Thumbnail</label>
                    <div class="input-group mb-2">
                        <input type="file" id="ThumbnailFile" class="form-control-file" accept="image/*" />
                        <div class="input-group-append">
                            <button type="button" class="btn btn-outline-secondary" id="btnChonThumbnail">Chọn từ thư viện</button>
                        </div>
                    </div>

                    <!-- Nút hủy thumbnail -->
                    <button type="button" id="btnXoaThumbnail" class="btn btn-sm btn-danger d-none mb-2">Hủy ảnh đã chọn</button>

                    <input type="hidden" id="LinkThumbnail" />
                    <div id="previewThumbnail" class="mt-2"></div>
                </div>

                <!-- PDF -->
                <div class="form-group">
                    <label for="PdfFile">Upload PDF</label>
                    <input type="file" id="PdfFile" class="form-control-file" accept="application/pdf" multiple />
                    <div id="previewPDF" class="mt-2 d-flex flex-wrap gap-2"></div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </form>
    </div>
</div>
<!--Modal Chọn Ảnh Được Lưu Từ CSDL-->
<div class="modal fade" id="modalThuVienAnh" tabindex="-1" role="dialog" aria-labelledby="modalThuVienAnhLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chọn ảnh từ thư viện</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                <div id="thuVienAnh" class="d-flex flex-wrap gap-3 justify-content-start"></div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xem Nội Dung -->
<div class="modal fade" id="modalXemNoiDung" tabindex="-1" role="dialog" aria-labelledby="modalXemNoiDungLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <!-- scrollable -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xem Nội Dung</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                <!-- giới hạn chiều cao -->
                <div id="xemNoiDungContainer" class="ckeditor-content"
                     style="padding: 10px; border: 1px solid #ddd; border-radius: 4px; background: #fff;
                        white-space: normal; word-wrap: break-word; overflow-wrap: break-word;">
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Modal Tiêu Đề Đầy Đủ -->
<div class="modal fade" id="modalTieuDeDayDu" tabindex="-1" role="dialog" aria-labelledby="modalTieuDeDayDuLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTieuDeDayDuLabel">Tiêu đề đầy đủ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body d-flex align-items-center justify-content-between">
                <p id="tieuDeDayDuContent" class="mb-0 mr-2 flex-grow-1"></p>
                <button id="btnCopyTieuDe"
                        class="border-0 bg-transparent"
                        style="padding: 0; margin: 0; line-height: 1; height: auto; width: auto;"
                        title="Sao chép tiêu đề">
                    <i class="anticon anticon-copy" style="font-size: 16px;"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Danh sách PDF -->
<div class="modal fade" id="modalDanhSachPDF" tabindex="-1" aria-labelledby="modalDanhSachPDFLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalDanhSachPDFLabel">Danh sách file PDF</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <div id="danhSachPDFContainer" class="row gy-2">
                    <!-- Danh sách PDF sẽ render ở đây -->
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnTaiTatCaPDF" class="btn btn-success">
                    <i class="anticon anticon-download"></i> Tải tất cả
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>


