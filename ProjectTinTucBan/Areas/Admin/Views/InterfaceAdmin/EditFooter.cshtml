@model Newtonsoft.Json.Linq.JObject
@{
    ViewBag.Title = "Chỉnh sửa Footer";
}



<div class="container-fluid py-4" >
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fa fa-edit mr-2"></i>Chỉnh sửa Footer</h4>
                </div>
                <div class="card-body">
                    @{
                        object successMsg = null;
                        try { successMsg = TempData != null ? TempData["Success"] : null; } catch { successMsg = null; }
                    }
                    @if (successMsg != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fa fa-check-circle mr-2"></i>@successMsg
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <div id="alert-success" class="alert alert-success alert-dismissible fade show" style="display:none" role="alert">
                        <i class="fa fa-check-circle mr-2"></i><span class="alert-message"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div id="alert-error" class="alert alert-danger alert-dismissible fade show" style="display:none" role="alert">
                        <i class="fa fa-exclamation-circle mr-2"></i><span class="alert-message"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <form id="editFooterForm" autocomplete="off">
                        <input type="hidden" id="footerId" value="@(Model != null && Model["id"] != null ? Model["id"] : "")" />

                        <div class="form-row mb-4">
                            <div class="col-12">
                                <h5 class="border-bottom pb-2 text-primary">Thông tin chung</h5>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="fullName">Tiêu đề (VN)</label>
                                <input type="text" id="fullName" name="fullName" class="form-control" value="@(Model != null && Model["fullName"] != null ? Model["fullName"] : "")" required />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="englishName">Tiêu đề (EN)</label>
                                <input type="text" id="englishName" name="englishName" class="form-control" value="@(Model != null && Model["englishName"] != null ? Model["englishName"] : "")" required />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="established">Ngày thành lập</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                    <input type="text" id="established" name="established" class="form-control" value="@(Model != null && Model["established"] != null ? Model["established"] : "")" required placeholder="dd/MM/yyyy" />
                                </div>
                            </div>
                        </div>

                        <div class="form-row mb-4">
                            <div class="col-12">
                                <h5 class="border-bottom pb-2 text-primary">Thông tin liên hệ</h5>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="address">Địa chỉ</label>
                                <input type="text" id="address" name="address" class="form-control" value="@(Model != null && Model["address"] != null ? Model["address"] : "")" required />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="phone">Điện thoại</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                    </div>
                                    <input type="text" id="phone" name="phone" class="form-control" value="@(Model != null && Model["phone"] != null ? Model["phone"] : "")" required />
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="email">Email</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                    </div>
                                    <input type="email" id="email" name="email" class="form-control" value="@(Model != null && Model["email"] != null ? Model["email"] : "")" required />
                                </div>
                            </div>
                        </div>

                        <div class="form-row mb-4">
                            <div class="col-12">
                                <h5 class="border-bottom pb-2 text-primary">Nội dung bổ sung</h5>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="videoUrl">Video URL (có thể dán link YouTube thường hoặc link nhúng)</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-video"></i></span>
                                    </div>
                                    <input type="text" id="videoUrl" name="videoUrl" class="form-control" value="@(Model != null && Model["videoUrl"] != null ? Model["videoUrl"] : "")" />
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="footerCopyright">Bản quyền</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-copyright"></i></span>
                                    </div>
                                    <input type="text" id="footerCopyright" name="footerCopyright" class="form-control" value="@(Model != null && Model["footerCopyright"] != null ? Model["footerCopyright"] : "")" />
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="footerNote">Ghi chú</label>
                                <input type="text" id="footerNote" name="footerNote" class="form-control" value="@(Model != null && Model["footerNote"] != null ? Model["footerNote"] : "")" />
                            </div>
                        </div>
                        @if (Model != null && Model["videoUrl"] != null && !string.IsNullOrEmpty((string)Model["videoUrl"]))
                        {
                            <div class="form-row mb-4">
                                <div class="col-12">
                                    <h5 class="border-bottom pb-2 text-primary">Xem trước video</h5>
                                    <div id="videoPreview" class="embed-responsive embed-responsive-16by9 mt-2"></div>
                                </div>
                            </div>
                        }
                        <div class="form-row">
                            <div class="col-12 text-right">
                                <button type="button" id="btnDelete" class="btn btn-danger mr-2">
                                    <i class="fa fa-trash mr-1"></i> Xóa Footer
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-save mr-1"></i> Lưu thay đổi
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="~/Areas/Admin/Scripts/EditFooter.js"></script>
}