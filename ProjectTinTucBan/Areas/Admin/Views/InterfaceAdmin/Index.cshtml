@{
    ViewBag.Title = "Trang chủ Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Style cho phần hiển thị thông tin session */
    .session-info, .session-warning, .session-error {
        margin-bottom: 20px;
        border-radius: 5px;
    }

        .session-info ul {
            padding-left: 20px;
            margin-bottom: 0;
        }

        .session-info li {
            margin-bottom: 5px;
        }

    .avatar-lg {
        width: 50px;
        height: 50px;
    }

    #chartContainer {
        width: 100%;
        max-width: 1000px;
        height: 500px;
        margin: 40px auto;
    }

    #viewsChart {
        height: 100%;
    }

    body {
        background-color: white !important;
    }

    .main-content {
        padding: 20px;
        margin-top: 70px;
    }

    .main-content, .page-container {
        background-color: white !important;
    }

    .table-responsive {
        padding: 10px;
        background-color: #fff;
    }

    #table_load_baiviet {
        width: 100%;
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        overflow: hidden;
    }

        #table_load_baiviet th,
        #table_load_baiviet td {
            padding: 10px 8px;
            font-size: 14px;
            vertical-align: middle;
            white-space: normal;
            word-break: break-word;
        }

        #table_load_baiviet,
        #table_load_baiviet th,
        #table_load_baiviet td {
            border: 1px solid #dee2e6 !important;
            border-collapse: collapse !important;
            background-color: #fff;
        }

            #table_load_baiviet thead th {
                background-color: #5a8dee;
                color: white;
                text-align: center;
                font-weight: 600;
            }

            #table_load_baiviet td {
                text-align: center;
            }

                /* STT */
                #table_load_baiviet th:nth-child(2),
                #table_load_baiviet td:nth-child(2) {
                    width: 50px;
                }
            /* Ngày đăng & cập nhật */
            #table_load_baiviet th:nth-child(5),
            #table_load_baiviet th:nth-child(6) {
                text-align: center;
                width: 10px;
            }

            #table_load_baiviet td:nth-child(5),
            #table_load_baiviet td:nth-child(6) {
                text-align: left;
                width: 120px;
            }
            /* Thumbnail */
            #table_load_baiviet td:nth-child(7) img {
                max-width: 80px;
                height: auto;
                border-radius: 4px;
            }
</style>
<div class="main-content">


    <div class="container-fluid">
        <!-- Session info will be displayed here by JavaScript -->
        <!-- Thống kê -->

        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body" id="day">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-blue">
                                <i class="anticon anticon-eye"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0" id="stat-day-views"></h2>
                                <p class="m-b-0 text-muted">lượt xem theo ngày</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body" id="month">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-cyan">
                                <i class="anticon anticon-calendar"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0" id="stat-month-views"></h2>
                                <p class="m-b-0 text-muted">Lượt xem theo tháng</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body" id="year">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-gold">
                                <i class="anticon anticon-bar-chart"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0" id="stat-year-views"></h2>
                                <p class="m-b-0 text-muted">Lượt xem theo năm</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body" id="baiviet">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-purple">
                                <i class="anticon anticon-file-text"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0" id="stat-articles"></h2>
                                <p class="m-b-0 text-muted">Bài viết đã đăng</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Biểu đồ -->
            <div id="chartContainer" style="width:100%; max-width:1000px; height:500px; margin:40px auto; display:none;">
                <div id="viewsChart" style="height:100%;"></div>
            </div>
            <!-- Bảng bài viết -->
            <div id="showtarget" class="col-12"></div>
        </div>

    </div>
</div>

@section scriptsAdmin {
    <script src="~/Areas/Admin/Scripts/CheckSession.js"></script>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>

    <!-- Chartist CSS (local) -->
    <link href="~/Areas/assets/vendors/chartist/chartist.min.css" rel="stylesheet" />

    <!-- Chartist Tooltip CSS (CDN hoặc local nếu có) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chartist-plugin-tooltips@0.0.17/dist/chartist-plugin-tooltip.css" />

    <!-- Chartist JS (local) -->
    <script src="~/Areas/assets/vendors/chartist/chartist.min.js"></script>
    <!-- Chartist Tooltip JS (CDN hoặc local nếu có) -->
    <script src="https://cdn.jsdelivr.net/npm/chartist-plugin-tooltips@0.0.17/dist/chartist-plugin-tooltip.min.js"></script>
    <script src="~/Areas/Admin/Scripts/DashboardScript.js"></script>
}
