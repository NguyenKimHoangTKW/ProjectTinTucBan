@{
    ViewBag.Title = "Trang chủ Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .avatar-lg {
        width: 50px;
        height: 50px;
    }

    #chartContainer {
        width: 100%;
        max-width: 1000px;
        height: 500px;
        margin: 40px auto;
    }

    #viewsChart {
        height: 100%;
    }
    /* Style cho phần hiển thị thông tin session */
    .session-info, .session-warning, .session-error {
        margin-bottom: 20px;
        border-radius: 5px;
    }

        .session-info ul {
            padding-left: 20px;
            margin-bottom: 0;
        }

        .session-info li {
            margin-bottom: 5px;
        }

    .avatar-lg {
        width: 50px;
        height: 50px;
    }

    #chartContainer {
        width: 100%;
        max-width: 1000px;
        height: 500px;
        margin: 40px auto;
    }

    #viewsChart {
        height: 100%;
    }

    body {
        background-color: white !important;
    }

    .main-content {
        padding: 20px;
        margin-top: 70px;
    }

    .main-content, .page-container {
        background-color: white !important;
    }

    .table-responsive {
        padding: 10px;
        background-color: #fff;
    }

    #table_load_baiviet {
        width: 100%;
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        overflow: hidden;
    }

        #table_load_baiviet th,
        #table_load_baiviet td {
            padding: 10px 8px;
            font-size: 14px;
            vertical-align: middle;
            white-space: normal;
            word-break: break-word;
        }

        #table_load_baiviet,
        #table_load_baiviet th,
        #table_load_baiviet td {
            border: 1px solid #dee2e6 !important;
            border-collapse: collapse !important;
            background-color: #fff;
        }

            #table_load_baiviet thead th {
                background-color: #5a8dee;
                color: white;
                text-align: center;
                font-weight: 600;
            }

            #table_load_baiviet td {
                text-align: left;
            }

                /* STT */
                #table_load_baiviet th:nth-child(2),
                #table_load_baiviet td:nth-child(2) {
                    width: 50px;
                    text-align: center;
                }
            /* Ngày đăng & cập nhật */
            #table_load_baiviet th:nth-child(5),
            #table_load_baiviet th:nth-child(6) {
                text-align: center;
                width: 10px;
            }

            #table_load_baiviet td:nth-child(5),
            #table_load_baiviet td:nth-child(6) {
                text-align: left;
                width: 120px;
            }
            /* Thumbnail */
            #table_load_baiviet td:nth-child(7) img {
                max-width: 80px;
                height: auto;
                border-radius: 4px;
                text-align: center;
            }

            #table_load_baiviet td:nth-child(8) {
                text-align: center;
                width: 120px;
            }

    <style >
    .chart-filter {
        background: #f9f9f9;
        padding: 15px;
        border-radius: 8px;
        border: 1px solid #ddd;
    }

    .chart-filter label {
        font-weight: 600;
    }

    .chart-filter .form-control {
        font-size: 14px;
    }

    .chart-filter button {
        font-size: 14px;
    }
</style>

</style>
<div class="main-content">


    <div class="container-fluid">
        <!-- Session info will be displayed here by JavaScript -->
        <!-- Thống kê -->
        <div class="row-cols-1">
            <div class="chart-filter row align-items-end mb-4">
                <div class="col-md-2">
                    <label for="filter-year">Năm</label>
                    <input type="number" min="2000" max="2100" class="form-control" id="filter-year" placeholder="VD: 2025">
                </div>
                <div class="col-md-2">
                    <label for="filter-month">Tháng</label>
                    <select class="form-control" id="filter-month" disabled>
                        <option value="">-- Chọn --</option>
                        <!-- Option 1-12 sẽ được thêm bằng JS -->
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="filter-from">Từ ngày</label>
                    <input type="number" min="1" max="31" class="form-control" id="filter-from" placeholder="VD: 1" disabled>
                </div>
                <div class="col-md-2">
                    <label for="filter-to">Đến ngày</label>
                    <input type="number" min="1" max="31" class="form-control" id="filter-to" placeholder="VD: 15" disabled>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100 mb-2" id="btn-apply-filter">Lọc</button>
                    <button class="btn btn-secondary w-100" id="btn-reset-filter">Đặt lại</button>
                </div>
            </div>



        </div>
        <div class="row">

            <div class="col-md-3">
                <div class="card">
                    <div class="card-body" id="day" style="cursor:pointer;">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-blue">
                                <i class="anticon anticon-eye"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0" id="stat-day-views"></h2>
                                <p class="m-b-0 text-muted">lượt xem theo ngày</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body" id="month" style="cursor:pointer;">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-cyan">
                                <i class="anticon anticon-calendar"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0" id="stat-month-views"></h2>
                                <p class="m-b-0 text-muted">Lượt xem theo tháng</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body" id="year" style="cursor:pointer;">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-gold">
                                <i class="anticon anticon-bar-chart"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0" id="stat-year-views"></h2>
                                <p class="m-b-0 text-muted">Lượt xem theo năm</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body" id="baiviet">
                        <div class="media align-items-center">
                            <div class="avatar avatar-icon avatar-lg avatar-purple">
                                <i class="anticon anticon-file-text"></i>
                            </div>
                            <div class="m-l-15">
                                <h2 class="m-b-0" id="stat-articles"></h2>
                                <p class="m-b-0 text-muted">Bài viết đã đăng</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Biểu đồ -->
            <div id="chartContainer" style="width:100%; max-width:1000px; height:500px; margin:40px auto; display:none;">
                <div id="viewsChart" style="height:100%;"></div>
            </div>
            <!-- Bảng bài viết -->
            <div id="showtarget" class="col-12">

            </div>
        </div>

    </div>
</div>

@section scriptsAdmin {
    <script src="~/Areas/Admin/Scripts/CheckSession.js"></script>


    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <link href="~/Areas/assets/vendors/chartist/chartist.min.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/chartist.js/latest/chartist.min.css">
    <script src="https://cdn.jsdelivr.net/chartist.js/latest/chartist.min.js"></script>

    <script src="~/Areas/assets/vendors/chartist/chartist.min.js"></script>


    <script src="~/Areas/Admin/Scripts/DashboardScript.js"></script>
}

