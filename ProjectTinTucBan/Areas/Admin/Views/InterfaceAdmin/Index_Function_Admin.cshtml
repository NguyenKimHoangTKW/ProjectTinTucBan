﻿@{
    ViewBag.Title = "Quản lý chức năng admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="container-fluid">
        <!-- Header và breadcrumb -->
        <div class="page-header">
            <h2 class="header-title">Quản lý chức năng Admin</h2>
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a href="/Admin/InterfaceAdmin/Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                    <span class="breadcrumb-item active">Quản lý chức năng admin</span>
                </nav>
            </div>
        </div>

        <!-- Card chứa bảng dữ liệu -->
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-8 col-sm-12 mb-3">
                        <h4 class="card-title">Danh sách chức năng admin</h4>
                    </div>
                    <div class="col-md-4 col-sm-12 text-md-right">
                        <button class="btn btn-primary w-100 w-md-auto" id="btnAddFunction">
                            <i class="anticon anticon-plus-circle m-r-5"></i>
                            <span>Thêm chức năng admin</span>
                        </button>
                    </div>
                </div>

                <!-- Bộ lọc và tìm kiếm di động - Cải thiện -->
                <div class="d-md-none mb-3">
                    <div class="input-group">
                        <input type="text" id="mobileSearch" class="form-control" placeholder="Tìm kiếm...">
                        <div class="input-group-append">
                            <button class="btn btn-primary" id="btnMobileSearch">
                                <i class="anticon anticon-search"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Wrapper cho bảng có thể scroll ngang trên mobile -->
                <div class="table-responsive">
                    <!-- Bảng dữ liệu -->
                    <table id="data-table" class="display hover nowrap w-100">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên chức năng</th>
                                <th>Mã chức năng</th>
                                <th>Ngày tạo</th>
                                <th>Ngày cập nhật</th>
                                <th data-priority="1">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Data will be loaded here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Quản lý Chức năng Admin (dùng chung cho cả thêm và sửa) -->
<div class="modal fade" id="FunctionModal" tabindex="-1" role="dialog" aria-labelledby="FunctionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="FunctionModalLabel">Quản lý chức năng Admin</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="FunctionForm">
                    <input type="hidden" id="functionId" value="" />
                    <input type="hidden" id="formMode" value="add" /> <!-- 'add' hoặc 'edit' -->

                    <div class="form-group">
                        <label for="tenFunction">Tên chức năng <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="tenFunction" name="tenFunction" placeholder="Nhập tên chức năng admin" required>
                        <small class="form-text text-muted">Tên chức năng trong hệ thống</small>
                    </div>

                    <div class="form-group">
                        <label for="maFunction">Mã chức năng <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="maFunction" name="maFunction" placeholder="Nhập mã chức năng admin" required>
                        <small class="form-text text-muted">Mã nhận dạng chức năng trong hệ thống</small>
                    </div>

                    <div class="form-group">
                        <label for="moTa">Mô tả <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="moTa" name="moTa" rows="3" placeholder="Nhập mô tả chức năng admin" required></textarea>
                        <small class="form-text text-muted">Mô tả chi tiết về chức năng này</small>
                    </div>

                    <!-- Menu Selection Table -->
                    <div class="form-group">
                        <label>Chọn Menu <span class="text-danger">*</span></label>
                        <div class="table-responsive" style="max-height: 300px; border: 1px solid #e8e8e8; border-radius: 4px;">
                            <table class="table table-bordered" id="menuSelectionTable">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th style="width: 50px; text-align: center;">#</th>
                                        <th>Tên Menu</th>
                                        <th>Đường dẫn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="3" class="text-center">Đang tải danh sách menu...</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <small class="form-text text-muted">Chọn menu áp dụng cho chức năng này</small>
                    </div>

                    <!-- Chỉ hiển thị khi ở chế độ sửa -->
                    <div id="editOnlyFields" style="display:none">
                        <div class="form-group">
                            <label>Thông tin thời gian</label>
                            <div class="row">
                                <div class="col-md-6 col-sm-12 mb-3">
                                    <input type="text" class="form-control" id="ngayTao" name="ngayTao" readonly placeholder="Ngày tạo">
                                    <small class="form-text text-muted">Ngày tạo</small>
                                </div>
                                <div class="col-md-6 col-sm-12">
                                    <input type="text" class="form-control" id="ngayCapNhat" name="ngayCapNhat" readonly placeholder="Ngày cập nhật">
                                    <small class="form-text text-muted">Cập nhật gần nhất</small>
                                </div>
                            </div>
                        </div>
                    </div>



                </form>
            </div>
            <div class="modal-footer flex-wrap justify-content-center">
                <button type="button" class="btn btn-primary m-1" id="btnSaveFunction">
                    <i class="anticon anticon-save m-r-5"></i>
                    <span id="btnSaveText">Lưu</span>
                </button>
                <button type="button" class="btn btn-default m-1" data-dismiss="modal">Hủy</button>

            </div>
        </div>
    </div>
</div>


<!-- Modal Xem Chi Tiết -->
<div class="modal fade" id="detailFunctionModal" tabindex="-1" role="dialog" aria-labelledby="detailFunctionModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailFunctionModalLabel">Chi tiết chức năng admin</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="detail-group">
                    <label>Tên chức năng:</label>
                    <p id="detailTenFunction" class="detail-value"></p>
                </div>
                <div class="detail-group">
                    <label>Mã chức năng:</label>
                    <p id="detailMaFunction" class="detail-value"></p>
                </div>
                <div class="detail-group">
                    <label>Mô tả:</label>
                    <p id="detailMoTa" class="detail-value"></p>
                </div>
                <div class="detail-group">
                    <label>Ngày tạo:</label>
                    <p id="detailNgayTao" class="detail-value"></p>
                </div>
                <div class="detail-group">
                    <label>Ngày cập nhật:</label>
                    <p id="detailNgayCapNhat" class="detail-value"></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<style>
    /* ===== GENERAL STYLES ===== */
    .main-content {
        padding: calc(70px + -25px) 25px 25px !important;
    }

    /* Làm mịn góc cho các phần tử UI */
    .card, .modal-content, .btn, .form-control, .input-group-text {
        border-radius: 6px;
    }

    /* ===== TABLE STYLES ===== */
    .dataTables_wrapper .dataTables_filter {
        float: right;
        text-align: right;
        margin-bottom: 20px;
    }

    .dataTables_wrapper .dataTables_length {
        float: left;
        margin-bottom: 20px;
    }

    .dataTables_wrapper .dataTables_filter input {
        margin-left: 10px;
        padding: 6px 10px;
        border: 1px solid #e8e8e8;
        border-radius: 4px;
        min-width: 220px;
    }

    #data-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        #data-table thead th {
            padding: 15px 10px;
            border-bottom: 1px solid #e8e8e8;
            font-weight: 500;
            color: #fff;
            background-color: #5a8dee;
            text-align: center !important;
        }

        #data-table tbody td {
            padding: 15px 10px;
            border-bottom: 1px solid #e8e8e8;
            color: #333;
            text-align: left;
            vertical-align: middle;
        }

            #data-table tbody td:first-child,
            #data-table tbody td:last-child,
            #data-table tbody td:nth-child(5),
            #data-table tbody td:nth-child(6) {
                text-align: center;
            }

        #data-table tbody tr:hover {
            background-color: #f8f8f8;
        }

    /* Table Responsive */
    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    /* ===== DATATABLE CONTROLS ===== */
    .dataTables_paginate {
        margin-top: 10px;
        display: flex;
        justify-content: flex-end;
    }

        .dataTables_paginate .paginate_button {
            padding: 5px 10px;
            margin: 0 2px;
            border: 1px solid #e8e8e8;
            border-radius: 4px;
            background: white;
            cursor: pointer;
        }

            .dataTables_paginate .paginate_button.current {
                background-color: #5a8dee;
                color: white !important;
                border-color: #5a8dee;
            }

            .dataTables_paginate .paginate_button:hover:not(.current) {
                background-color: #f8f8f8;
            }

    /* Thiết lập tùy chỉnh hiển thị số mục */
    .dataTables_length select {
        padding: 5px 10px;
        border: 1px solid #e8e8e8;
        border-radius: 4px;
    }

    /* ===== ACTION BUTTONS ===== */
    .action-buttons {
        display: flex;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: center;
    }

    .btn-action {
        min-width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        cursor: pointer;
        transition: all 0.3s;
        margin: 3px;
        border-radius: 4px;
        padding: 0 8px;
    }

    .btn-detail {
        background-color: #1890ff;
        color: white;
    }

        .btn-detail:hover {
            background-color: #40a9ff;
            color: white;
        }

    .btn-edit {
        background-color: #ffc107;
        color: #212529;
    }

        .btn-edit:hover {
            background-color: #e0a800;
            color: #212529;
        }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c82333;
            color: white;
        }

    /* ===== MODAL STYLES ===== */
    .modal-header {
        border-bottom: 1px solid #e8e8e8;
        padding: 15px 20px;
    }

    .modal-footer {
        border-top: 1px solid #e8e8e8;
        padding: 15px 20px;
    }

    .modal-body {
        padding: 20px;
    }

    /* Form controls */
    .form-group label {
        font-weight: 500;
    }

    .form-control {
        padding: 10px 15px;
        border: 1px solid #e8e8e8;
        border-radius: 4px;
    }


        .form-control:focus {
            border-color: #5a8dee;
            box-shadow: 0 0 0 0.1rem rgba(90, 141, 238, 0.25);
        }


        .form-control[readonly] {
            cursor: not-allowed;
        }

    .input-group-text {
        background-color: #f8f9fa;
        border-color: #e8e8e8;
    }


    .form-control:focus {
        border-color: #5a8dee;
        box-shadow: 0 0 0 0.1rem rgba(90, 141, 238, 0.25);
    }

    .form-control[readonly] {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }

    /* ===== DETAIL VIEW STYLES ===== */
    .detail-group {
        margin-bottom: 15px;
    }

        .detail-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #333;
        }

        .detail-group .detail-value {
            padding: 10px 12px;
            background-color: #f8f9fa;
            border-radius: 4px;
            min-height: 24px;
            word-break: break-word;
            border: 1px solid #e8e8e8;
        }

    /* ===== RESPONSIVE STYLES ===== */
    /* Utility classes */
    .w-md-auto {
        width: auto;
    }

    /* Mobile search container */
    #mobileSearchContainer {
        display: none; /* Hidden by default, shown with JS */
    }

    #mobileSearch {
        height: 38px;
    }

    /* Responsive adjustments */
    @@media (max-width: 767px) {
        /* General */
        .text-md-right {
            text-align: center !important;
        }
        /* Header */
        .header-title {
            font-size: 1.5rem;
        }
        /* Button adjustments */
        #btnAddFunction {
            margin-bottom: 1rem;
            width: 100%;
        }
        /* Table adjustments */
        #data-table,
        #data-table thead,
        #data-table tbody,
        #data-table th,
        #data-table td,
        #data-table tr {
            font-size: 14px;
        }
        /* Mobile search */
        .dataTables_filter {
            display: none; /* Hidden on mobile */
        }

        #mobileSearchContainer {
            display: block;
            margin-bottom: 15px;
        }
        /* Action buttons adjustment */
        .action-buttons {
            display: flex;
            justify-content: center;
            flex-wrap: nowrap;
        }

        .btn-action {
            margin: 2px;
            min-width: 32px;
            width: auto;
        }

            .btn-action .anticon {
                font-size: 14px;
            }
        /* Pagination */
        .dataTables_paginate {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 15px;
        }

            .dataTables_paginate .paginate_button {
                padding: 8px 12px;
                margin: 3px;
            }

        .dataTables_length,
        .dataTables_info {
            text-align: center !important;
            float: none !important;
            display: block !important;
            margin: 10px 0 !important;
        }
        /* Modal adjustments */
        .modal-dialog {
            margin: 10px auto;
            width: calc(100% - 20px);
            max-width: none;
        }

        .modal-body {
            padding: 15px 10px;
        }

        .modal-footer {
            justify-content: center;
            padding: 10px;
            flex-wrap: wrap;
        }

            .modal-footer .btn {
                margin: 5px;
                min-width: 45%;
                padding: 8px 16px;
            }
        /* Detail view adjustments */
        .detail-group label {
            font-size: 14px;
        }

        .detail-group .detail-value {
            font-size: 14px;
            padding: 8px;
        }
    }

    /* Adjustments for small phones */
    @@media (max-width: 380px) {
        .action-buttons {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
            margin: 2px 0;
        }

        .modal-footer .btn {
            min-width: 100%;
        }
    }


    .menu-selection-container {
        max-height: 300px;
        overflow-y: auto;
        border: 1px solid #e8e8e8;
        border-radius: 4px;
    }

    #menuSelectionTable {
        margin-bottom: 0;
    }

        #menuSelectionTable thead th {
            position: sticky;
            top: 0;
            z-index: 10;
        }

        #menuSelectionTable .form-check {
            margin: 0;
            display: flex;
            justify-content: center;
        }

    /* Checkbox styling */
    .custom-checkbox .custom-control-input:checked ~ .custom-control-label::before {
        background-color: #5a8dee;
        border-color: #5a8dee;
    }
</style>

@section scriptsAdmin {
    <script src="~/Areas/Admin/Scripts/DanhSachChucNang.js"></script>

}