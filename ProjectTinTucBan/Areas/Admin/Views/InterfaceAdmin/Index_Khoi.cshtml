@{
    ViewBag.Title = "Quản lý Khối";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý Khối</h2>

<button id="btnLoad">Tải danh sách Khối</button>
<table class="table" id="tblKhoi">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên Khối</th>
            <th>Thứ tự</th>
            <th>Ngày đăng</th>
            <th>Ngày cập nhật</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<!-- Nút mở large modal Thêm/Sửa Khối -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg" id="btnShowKhoiModal">
    Thêm Khối
</button>

<!-- Large Modal Thêm/Sửa Khối -->
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="khoiModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title h4" id="khoiModalLabel">Thêm/Sửa Khối</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="khoiForm">
                    <input type="hidden" id="ID" />
                    <div class="form-group">
                        <label for="TenKhoi">Tên Khối</label>
                        <input type="text" class="form-control" id="TenKhoi" required />
                    </div>
                    <div class="form-group">
                        <label for="ThuTuShow">Thứ tự</label>
                        <input type="number" class="form-control" id="ThuTuShow" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Lưu</button>
                        <button type="button" class="btn btn-secondary" id="btnClear">Xóa form</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scriptsAdmin {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Thêm Bootstrap JS nếu chưa có -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Scripts/Khoi.js"></script>
}