@{
    ViewBag.Title = "Quản lý mục lục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>

    /* Định dạng DataTable giống như mẫu */
    .dataTables_wrapper .dataTables_filter {
        float: right;
        text-align: right;
        margin-bottom: 20px;
    }

    .dataTables_wrapper .dataTables_length {
        float: left;
        margin-bottom: 20px;
    }

    .dataTables_wrapper .dataTables_filter input {
        margin-left: 10px;
        padding: 6px 10px;
        border: 1px solid #e8e8e8;
        border-radius: 4px;
        min-width: 220px;
    }

    #data-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        /* Thêm CSS để căn giữa nội dung trong tiêu đề và dữ liệu của bảng */
        #data-table thead th {
            padding: 15px 10px;
            border-bottom: 1px solid #e8e8e8;
            font-weight: 500;
            color: #fff;
            background-color: #5a8dee;
            text-align: center !important;
        }

        #data-table tbody td {
            padding: 15px 10px;
            border-bottom: 1px solid #e8e8e8;
            color: #333;
            text-align: left;
            vertical-align: middle;
            border: 1px solid #dee2e6 !important;
            border-collapse: collapse !important;
        }

        #data-table tbody tr:hover {
            background-color: #f8f8f8;
        }

        #data-table tbody td:nth-child(4),
        #data-table tbody td:nth-child(5),
        #data-table tbody td:nth-child(6),
        #data-table tbody td:nth-child(7) {
            text-align: center;
        }

        #data-table td:last-child,
        #data-table th:last-child {
            justify-content: center !important;
        }

        /* Chống tràn cho cột Tên mục lục */
        #data-table th:nth-child(2),
        #data-table td:nth-child(2) {
            max-width: 150px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            text-align: left;
        }

        /* Chống tràn cho cột Link */
        #data-table th:nth-child(3),
        #data-table td:nth-child(3) {
            max-width: 150px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            text-align: left;
        }

    /* Styling for status toggle switch */
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 30px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 22px;
            width: 22px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #20c997;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #20c997;
    }

    input:checked + .slider:before {
        transform: translateX(30px);
    }

    /* Định dạng nút hình vuông */
    .btn-icon {
        width: 32px;
        height: 32px;
        padding: 5px;
        line-height: 1;
        border-radius: 4px;
        background-color: transparent;
        border: none;
        margin-right: 5px;
    }

        .btn-icon:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

    /* Cải thiện hiển thị di động */
    @@media screen and (max-width: 576px) {
        #data-table {
            display: block;
            overflow-x: auto;
        }

        .modal-footer {
            flex-direction: column;
            align-items: stretch;
            padding: 15px;
        }

            .modal-footer button {
                margin: 5px 0;
                width: 100%;
                height: 40px;
                display: flex;
                align-items: center;
                justify-content: center;
            }
        /* Make modal body content more readable on mobile */
        .modal-body {
            padding: 15px;
        }

        .form-group small {
            font-size: 11px;
        }
        /* Adjust input groups for better mobile display */
        .input-group {
            flex-wrap: nowrap;
        }
        /* Make sure modal header is properly displayed */
        .modal-header h5 {
            font-size: 16px;
            margin-right: 25px; /* Ensure space for close button */
        }
        /* Improve form field spacing on mobile */
        .row {
            margin-right: -10px;
            margin-left: -10px;
        }

        .col-md-6 {
            padding-right: 10px;
            padding-left: 10px;
        }
        /* Ensure checkbox is visible and properly aligned */
        .checkbox {
            display: flex;
            align-items: center;
            margin-top: 5px;
        }

            .checkbox input {
                margin-right: 8px;
            }
    }


    /* Tùy chỉnh các điều khiển DataTable */
    .dataTables_paginate {
        margin-top: 10px;
    }

        

    /* Chỉnh mũi tên sắp xếp */
    table.dataTable thead .sorting:after,
    table.dataTable thead .sorting_asc:after,
    table.dataTable thead .sorting_desc:after {
        opacity: 0.4;
        font-size: 0.8em;
    }

    /* Thiết lập tùy chỉnh hiển thị số mục */
    .dataTables_length select {
        padding: 5px 10px;
        border: 1px solid #e8e8e8;
        border-radius: 4px;
    }

        #data-table th:nth-child(6),
        #data-table td:nth-child(6),
        #data-table th:nth-child(7),
        #data-table td:nth-child(7) {
            width: 12.5%; /* Ngày tạo & Ngày cập nhật */
        }

    /* Làm cho phần Show entries và Search trông giống mẫu */
    .dataTables_wrapper .dataTables_length label,
    .dataTables_wrapper .dataTables_filter label {
        font-weight: normal;
    }

    .main-content {
        padding: calc(70px + -25px) 25px 25px !important;
    }

    /* Modal styling */
    .modal-header {
        border-bottom: 1px solid #e8e8e8;
        padding: 15px 20px;
    }

    .modal-footer {
        border-top: 1px solid #e8e8e8;
        padding: 15px 20px;
    }

    .modal-body {
        padding: 20px;
    }

    .form-group label {
        font-weight: 500;
    }

    .form-control {
        padding: 10px 15px;
        border: 1px solid #e8e8e8;
        border-radius: 4px;
    }

        .form-control:focus {
            border-color: #5a8dee;
            box-shadow: 0 0 0 0.1rem rgba(90, 141, 238, 0.25);
        }

        .form-control[readonly] {
            background-color: #f8f9fa;
            cursor: not-allowed;
        }

    .input-group-text {
        background-color: #f8f9fa;
        border-color: #e8e8e8;
    }

    .btn-action {
        width: 40px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-edit {
        background-color: #ffc107; /* Màu vàng */
        color: #212529;
    }

        .btn-edit:hover {
            background-color: #e0a800;
            color: #212529;
        }

    .btn-delete {
        background-color: #dc3545; /* Màu đỏ */
        color: white;
    }

        .btn-delete:hover {
            background-color: #c82333;
            color: white;
        }
</style>

<div class="main-content">
    <div class="container-fluid">

        <h2 class="header-title">Quản lý mục lục</h2>
        <hr />

        <!-- Header và breadcrumb -->
        <div class="page-header">
            <h2 class="header-title">Quản lý mục lục</h2>
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a href="/Admin/InterfaceAdmin/Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                    <span class="breadcrumb-item active">Quản lý mục lục</span>
                </nav>
            </div>
        </div>

        <!-- Card chứa bảng dữ liệu -->
        <div class="card">
            <div class="card-body">
                <div class="row m-b-30">
                    <div class="col-lg-8">
                        <h4>Danh sách mục lục</h4>
                    </div>
                    <div class="col-lg-4 text-right">
                        <button class="btn btn-primary" id="btnAddMucLuc">
                            <i class="anticon anticon-plus-circle m-r-5"></i>
                            <span>Thêm mục lục mới</span>
                        </button>
                    </div>
                </div>

                <!-- Bảng dữ liệu -->
                <table id="data-table" class="display hover nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên mục lục</th>
                            <th>Link</th>
                            <th>Vị trí hiển thị</th>
                            <th>Trạng thái</th>
                            <th>Ngày đăng</th>
                            <th>Ngày cập nhật</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be loaded here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Quản lý Mục Lục (dùng chung cho cả thêm và sửa) -->
<div class="modal fade" id="mucLucModal" tabindex="-1" role="dialog" aria-labelledby="mucLucModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mucLucModalLabel">Quản lý mục lục</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="mucLucForm">
                    <input type="hidden" id="mucLucId" value="" />
                    <input type="hidden" id="formMode" value="add" /> <!-- 'add' hoặc 'edit' -->

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="tenMucLuc">Tên mục lục <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="tenMucLuc" name="tenMucLuc" placeholder="Nhập tên mục lục" required>
                                <small id="tenMucLucError" class="form-text text-muted">Tên hiển thị của mục lục trên website</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="link">Link URL <i class="text-muted">(Tự động tạo)</i></label>
                                <div class="input-group">
                                    <input type="text" class="form-control bg-light" id="link" name="link" placeholder="Đường dẫn URL sẽ được tự động tạo" readonly>
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="anticon anticon-link"></i></span>
                                    </div>
                                </div>
                                <small class="form-text text-muted">Đường dẫn URL được tự động tạo từ tên mục lục</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="thuTuShow">Vị trí hiển thị <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="thuTuShow" name="thuTuShow" min="1" value="1" placeholder="Nhập số thứ tự hiển thị" required>
                                <small id="thuTuShowError" class="form-text text-muted">Số thứ tự hiển thị của mục lục (số nhỏ hiển thị trước)</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="isActive" name="isActive" type="checkbox">
                                    <label for="isActive">Kích hoạt</label>
                                    <small class="form-text text-muted">Mục lục sẽ hiển thị trên website nếu được kích hoạt</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Chỉ hiển thị khi ở chế độ sửa -->
                    <div id="editOnlyFields" class="row" style="display:none">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Thông tin thời gian</label>
                                <div class="row">
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" id="ngayDang" name="ngayDang" readonly placeholder="Ngày đăng">
                                        <small class="form-text text-muted">Ngày tạo</small>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" id="ngayCapNhat" name="ngayCapNhat" readonly placeholder="Ngày cập nhật">
                                        <small class="form-text text-muted">Cập nhật gần nhất</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveMucLuc">
                    <i class="anticon anticon-save m-r-5"></i>
                    <span id="btnSaveText">Lưu</span>
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>



@section scriptsAdmin {

    <script src="~/Areas/Admin/Scripts/DanhSachMucLuc.js"></script>
}