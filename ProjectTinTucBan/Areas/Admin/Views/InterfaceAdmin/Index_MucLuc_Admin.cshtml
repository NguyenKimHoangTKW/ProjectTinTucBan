@{
    ViewBag.Title = "Quản lý mục lục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="container-fluid">
        <!-- Header và breadcrumb -->
        <div class="page-header">
            <h2 class="header-title">Quản lý mục lục</h2>
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a href="/Admin" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                    <span class="breadcrumb-item active">Quản lý mục lục</span>
                </nav>
            </div>
        </div>

        <!-- Card chứa bảng dữ liệu -->
        <div class="card">
            <div class="card-body">
                <div class="row m-b-30">
                    <div class="col-lg-8">
                        <h4>Danh sách mục lục</h4>
                    </div>
                    <div class="col-lg-4 text-right">
                        <button class="btn btn-primary" id="addnew">
                            <i class="anticon anticon-plus-circle m-r-5"></i>
                            <span>Thêm mục lục mới</span>
                        </button>
                    </div>
                </div>

                <!-- Bảng dữ liệu -->
                <table id="data-table" class="display hover nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên mục lục</th>
                            <th>Link</th>
                            <th>Vị trí hiển thị</th>
                            <th>Ngày đăng</th>
                            <th>Ngày cập nhật</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be loaded here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Định dạng DataTable giống như mẫu */
    .dataTables_wrapper .dataTables_filter {
        float: right;
        text-align: right;
        margin-bottom: 20px;
    }

    .dataTables_wrapper .dataTables_length {
        float: left;
        margin-bottom: 20px;
    }

    .dataTables_wrapper .dataTables_filter input {
        margin-left: 10px;
        padding: 6px 10px;
        border: 1px solid #e8e8e8;
        border-radius: 4px;
        min-width: 220px;
    }

    #data-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        /* Thêm CSS để căn giữa nội dung trong tiêu đề và dữ liệu của bảng */
        #data-table thead th {
            padding: 15px 10px;
            border-bottom: 1px solid #e8e8e8;
            font-weight: 500;
            color: #333;
            background-color: #fff;
            text-align: center;
        }

        #data-table tbody td {
            padding: 15px 10px;
            border-bottom: 1px solid #e8e8e8;
            color: #333;
            text-align: center;
            vertical-align: middle;
        }

        #data-table tbody tr:hover {
            background-color: #f8f8f8;
        }

    /* Định dạng badge */
    .badge {
        padding: 5px 10px;
        border-radius: 4px;
        font-weight: normal;
    }

    .badge-success {
        background-color: #20c997;
        color: #fff;
    }

    .badge-danger {
        background-color: #dc3545;
        color: #fff;
    }

    /* Định dạng nút hình vuông */
    .btn-icon {
        width: 32px;
        height: 32px;
        padding: 5px;
        line-height: 1;
        border-radius: 4px;
        background-color: transparent;
        border: none;
        margin-right: 5px;
    }

        .btn-icon:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

    /* Cải thiện hiển thị di động */
    @@media screen and (max-width: 767px) {
        #data-table {
            display: block;
            overflow-x: auto;
        }
    }

    /* Tùy chỉnh các điều khiển DataTable */
    .dataTables_paginate {
        margin-top: 10px;
    }

        .dataTables_paginate .paginate_button {
            padding: 5px 10px;
            margin: 0 2px;
            border: 1px solid #e8e8e8;
            border-radius: 4px;
            background: white;
            cursor: pointer;
        }

            .dataTables_paginate .paginate_button.current {
                background-color: #5a8dee;
                color: white !important;
                border-color: #5a8dee;
            }

            .dataTables_paginate .paginate_button:hover:not(.current) {
                background-color: #f8f8f8;
            }

    /* Chỉnh mũi tên sắp xếp */
    table.dataTable thead .sorting:after,
    table.dataTable thead .sorting_asc:after,
    table.dataTable thead .sorting_desc:after {
        opacity: 0.4;
        font-size: 0.8em;
    }

    /* Thiết lập tùy chỉnh hiển thị số mục */
    .dataTables_length select {
        padding: 5px 10px;
        border: 1px solid #e8e8e8;
        border-radius: 4px;
    }

    /* Làm cho phần Show entries và Search trông giống mẫu */
    .dataTables_wrapper .dataTables_length label,
    .dataTables_wrapper .dataTables_filter label {
        font-weight: normal;
    }

    .main-content {
        padding: calc(70px + -25px) 25px 25px;
    }
</style>

@section scriptsAdmin {
    <script src="~/Scripts/sweetalert2.all.min.js"></script>
    <script src="~/Areas/Admin/Scripts/DanhSachMucLuc.js"></script>
    
}