@{
    ViewBag.Title = "Đăng nhập";
    Layout = null;
    var returnUrl = ViewBag.ReturnUrl ?? Request.QueryString["ReturnUrl"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap 4 CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            background-image: url('@Url.Content("~/Areas/assets/images/nen.jpg")');
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
            min-height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 15px;
            box-sizing: border-box;
        }

        .login-form {
            background: rgba(255, 255, 255, 0.85);
            border-radius: 12px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.15);
            padding: 32px 24px;
            max-width: 400px;
            width: 100%;
        }

            .login-form .form-control {
                border-radius: 8px;
            }

            .login-form .input-group-text {
                background: #f8f9fa;
                border-radius: 8px 0 0 8px;
            }

            .login-form h2 {
                font-weight: 600;
                color: #333;
            }

        .or-separator {
            text-align: center;
            margin: 15px 0;
            color: #6c757d;
        }

        .btn-google {
            background-color: #DB4437; /* Google Red */
            color: white;
        }

            .btn-google:hover {
                background-color: #c23321;
                color: white;
            }
    </style>
</head>
<body>
    <div class="login-form">
        <h2 class="text-center mb-4">Đăng nhập quản trị</h2>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <form method="post" action="@Url.Action("Login", "InterfaceAdmin", new { Area = "Admin" })">
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                <label for="username">Tên đăng nhập</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-user"></i> @* Thay đổi class cho Font Awesome 5+ *@
                        </span>
                    </div>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Nhập tên đăng nhập" required />
                </div>
            </div>
            <div class="form-group mb-4">
                <label for="password">Mật khẩu</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i> @* Thay đổi class cho Font Awesome 5+ *@
                        </span>
                    </div>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu" required />
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
        </form>

        <div class="or-separator">
            <small>HOẶC ĐĂNG NHẬP BẰNG</small>
        </div>

        @* Nút Đăng nhập với Google đã được sửa đổi *@
        @using (Html.BeginForm("ExternalLogin", "InterfaceAdmin", new { Area = "Admin", ReturnUrl = returnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-google btn-block mb-3" name="provider" value="Google" title="Đăng nhập bằng tài khoản Google của bạn">
                <i class="fab fa-google mr-2"></i> Đăng nhập với Google
            </button>
        }

        <div class="text-center mt-2">
            <a href="@Url.Action("Register", "InterfaceAdmin", new { Area = "Admin" })">Chưa có tài khoản? Đăng ký ngay</a>
        </div>

    </div>
    @* Đã xóa thẻ script Font Awesome riêng vì link CSS đã đủ cho icon. Nếu cần các tính năng JS của FA, có thể thêm lại. *@
</body>
</html>