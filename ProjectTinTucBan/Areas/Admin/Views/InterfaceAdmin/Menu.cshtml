@model ProjectTinTucBan.Models.Menu_by_sub

@{
    ViewBag.Title = "Quản lý Menu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section scriptsAdmin{
    <script src="~/Areas/assets/js/OptionPhanQuyen.js"></script>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Areas/Admin/Scripts/MenuScript.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Areas/Admin/Scripts/GroupMenuAdminScript.js"></script>
}

<!-- Add Menu Modal -->
<div class="modal fade" id="addMenuModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Menu mới</h5>
                <button type="button" class="close" aria-label="Close" id="closeAddMenuModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-menu-form">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="menuName">Tên menu <span style="color:red">*</span>:</label>
                        <input type="text" class="form-control" id="menuName" name="menuName" required maxlength="100" />
                    </div>
                    <div class="form-group">
                        <label for="menuLink">Link:</label>
                        <input type="text" class="form-control" id="menuLink" name="menuLink" maxlength="255" />
                    </div>
                    <div class="form-group">
                        <label for="thuTuShow">Thứ tự hiển thị:</label>
                        <input type="number" class="form-control" id="thuTuShow" name="thuTuShow" min="0" max="1000" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="closeAddMenuModalFooter">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>

                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add SubMenu Modal -->
<div class="modal fade" id="addSubMenuModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Menu Con</h5>
                <button type="button" class="close" aria-label="Close" id="closeAddSubMenuModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-submenu-form">
                <div class="modal-body">
                    <input type="hidden" id="parentMenuId" name="parentMenuId" />
                    <div class="form-group">
                        <label for="subMenuName">Tên menu con <span style="color:red">*</span>:</label>
                        <input type="text" class="form-control" id="subMenuName" name="subMenuName" required maxlength="100" />
                    </div>
                    <div class="form-group">
                        <label for="subLink">Link:</label>
                        <input type="text" class="form-control" id="subLink" name="subLink" required maxlength="120" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="closeAddSubMenuModalFooter">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>

                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Group Menu Modal -->
<div class="modal fade" id="addGroupMenuModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Group Menu mới</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-groupmenu-form">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="groupMenuName">Tên group <span style="color:red">*</span>:</label>
                        <input type="text" class="form-control" id="groupMenuName" name="groupMenuName" required maxlength="100" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Group Menu Modal -->
<div class="modal fade" id="editGroupMenuModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sửa Group Menu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="edit-groupmenu-form">
                <div class="modal-body">
                    <input type="hidden" id="editGroupMenuId" name="editGroupMenuId" />
                    <div class="form-group">
                        <label for="editGroupMenuName">Tên group <span style="color:red">*</span>:</label>
                        <input type="text" class="form-control" id="editGroupMenuName" name="editGroupMenuName" required maxlength="100" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal: Thêm menu vào group -->
<div class="modal fade" id="addMenuToGroupModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form id="add-menu-to-group-form">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm menu vào group</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <label>Chọn menu đã có:</label>
                    <select id="selectExistingMenu" class="form-control"></select>
                    <hr>
                    <div>
                        <label>Hoặc thêm mới menu:</label>
                        <input type="text" id="newMenuName" class="form-control" placeholder="Tên menu">
                        <input type="text" id="newMenuLink" class="form-control" placeholder="Link menu">
                        <button type="submit" class="btn btn-primary mt-2" form="add-new-menu-to-group-form">Thêm mới và gán vào group</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Thêm menu đã có vào group</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </form>
        <form id="add-new-menu-to-group-form" style="display:none"></form>
    </div>
</div>

<!-- Main content -->
<div class="main-content">
    <ul class="nav nav-tabs nav-justified" id="myTabJustified" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="menu-tab-justified" data-toggle="tab" href="#menu-justified" role="tab" aria-controls="menu-justified" aria-selected="true">Menus</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="group-tab-justified" data-toggle="tab" href="#group-justified" role="tab" aria-controls="group-justified" aria-selected="false">Groups</a>
        </li>
    </ul>
    <div class="tab-content m-t-15" id="myTabContentJustified">
        <div class="tab-pane fade show active" id="menu-justified" role="tabpanel" aria-labelledby="menu-tab-justified">
            <button id="openAddMenuModal" class="btn btn-success mb-3">
                <i class="fas fa-plus"></i> Thêm Menu
            </button>
            <div class="card">
                <ul id="menu-list" class="list-group list-group-flush"></ul>
            </div>
        </div>
        <div class="tab-pane fade" id="group-justified" role="tabpanel" aria-labelledby="group-tab-justified">
            <div class="card">
                <button id="openAddGroupMenuModal" class="btn btn-success mb-3">
                    <i class="fas fa-plus"></i> Thêm Group
                </button>
                <div id="groupMenuTabsContainer"></div>
            </div>
        </div>

    </div>
</div>
