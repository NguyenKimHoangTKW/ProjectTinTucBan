@model ProjectTinTucBan.Models.Menu_by_sub

@{
    ViewBag.Title = "Quản lý Menu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<style>

    .menu-row-responsive {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        width: 100%;
        min-width: 0;
    }

    .menu-action-buttons {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-end;
        align-items: center;
        gap: 6px;
        max-width: 60%;
        min-width: 120px;
    }

        .menu-action-buttons .btn {
            min-width: 80px;
            font-size: 0.95em;
            white-space: nowrap;
            padding-left: 8px;
            padding-right: 8px;
            margin-bottom: 4px;
        }
    .toggle-submenu-btn {
        font-size: 0.8rem;
        height: 30px;
        line-height: 1;
    }
    .btn-xs-custom {
        padding: 2px 6px;
        font-size: 0.75rem;
        line-height: 1;
    }

</style>




<!-- Add Menu Modal -->
<div class="modal fade" id="addMenuModal" tabindex="-1" aria-labelledby="addMenuModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addMenuModalLabel">Thêm Menu mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="closeAddMenuModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-menu-form">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label for="menuName">Tên menu <span class="text-danger">*</span>:</label>
                        <input type="text" class="form-control" id="menuName" name="menuName" required maxlength="100" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="menuLink">Link:</label>
                        <input type="text" class="form-control" id="menuLink" name="menuLink" maxlength="255" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="iconName">Menu Icon (FontAwesome):</label>
                        <input type="text" class="form-control" id="iconName" name="iconName" placeholder="vd: fa fa-home" maxlength="100" />
                        <small class="form-text text-muted">
                            Xem <a href="https://fontawesome.com/icons" target="_blank">FontAwesome Icons</a>
                        </small>
                        <div id="iconPreview" class="mt-2" style="display:none;">
                            <span>Xem trước:</span> <i class="" id="iconPreviewElement"></i>
                        </div>
                    </div>
                </div>

                <div class="modal-footer d-flex flex-wrap justify-content-between gap-2">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="closeAddMenuModalFooter">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>



<!-- Add SubMenu Modal -->
<div class="modal fade" id="addSubMenuModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Menu Con</h5>
                <button type="button" class="close" aria-label="Close" id="closeAddSubMenuModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-submenu-form">
                <div class="modal-body">
                    <input type="hidden" id="parentMenuId" name="parentMenuId" />

                    <div class="form-group">
                        <label for="subMenuName">Tên menu con <span style="color:red">*</span>:</label>
                        <input type="text" class="form-control" id="subMenuName" name="subMenuName" required maxlength="100" />
                    </div>

                    <div class="form-group">
                        <label for="subLink">Link:</label>
                        <input type="text" class="form-control" id="subLink" name="subLink" required maxlength="120" />
                    </div>

                    <div class="form-group">
                        <label for="subIconName">Menu icon (FontAwesome):</label>
                        <input type="text" class="form-control" id="subIconName" name="subIconName" placeholder="vd: fa fa-cog" maxlength="100" />
                        <small class="form-text text-muted">
                            Tham khảo <a href="https://fontawesome.com/icons" target="_blank">FontAwesome Icons</a>
                        </small>
                        <div id="subIconPreview" class="mt-2" style="display:none;">
                            <strong>Xem trước:</strong> <i id="subIconPreviewElement"></i>
                        </div>
                    </div>
                </div>

                <div class="modal-footer d-flex flex-wrap justify-content-between gap-2">
                    <button type="button" class="btn btn-secondary" id="closeAddSubMenuModalFooter">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Group Menu Modal -->
<div class="modal fade" id="addGroupMenuModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form id="add-groupmenu-form">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Group Menu mới</h5>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Tên group <span class="text-danger">*</span>:</label>
                        <input type="text" class="form-control" id="groupMenuName" required maxlength="100" />
                    </div>
                    <div class="form-group">
                        <label>Dùng menu này cho vị trí:</label>
                        <input type="text" class="form-control" id="groupAsignTo" maxlength="100" />
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="groupImportant" />
                        <label class="form-check-label" for="groupImportant">Quan trọng</label>
                    </div>
                </div>
                <div class="modal-footer d-flex flex-wrap justify-content-between gap-2">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </div>
        </form>
    </div>
</div>


<!-- Edit Group Menu Modal -->
<div class="modal fade" id="editGroupMenuModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form id="edit-groupmenu-form">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Sửa Group Menu</h5>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editGroupMenuId" />
                    <div class="form-group">
                        <label>Tên group <span class="text-danger">*</span>:</label>
                        <input type="text" class="form-control" id="editGroupMenuName" required maxlength="100" />
                    </div>
                    <div class="form-group">
                        <label>Dùng menu này cho vị trí:</label>
                        <input type="text" class="form-control" id="editGroupAsignTo" maxlength="100" />
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="editGroupImportant" />
                        <label class="form-check-label" for="editGroupImportant">Quan trọng</label>
                    </div>
                </div>
                <div class="modal-footer d-flex flex-wrap justify-content-between gap-2">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </form>
    </div>
</div>


<!-- Modal: Thêm menu vào group -->
<div class="modal fade" id="addMenuToGroupModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form id="add-menu-to-group-form">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm menu vào group</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <label>Chọn menu đã có:</label>
                    <select id="selectExistingMenu" class="form-control"></select>
                    <hr>
                    <div>
                        <label>Hoặc thêm mới menu:</label>
                        <input type="text" id="newMenuName" class="form-control" placeholder="Tên menu">
                        <input type="text" id="newMenuLink" class="form-control" placeholder="Link menu">
                        <button type="submit" class="btn btn-primary mt-2" form="add-new-menu-to-group-form">Thêm mới và gán vào group</button>
                    </div>
                    <div>
                        <label>Chọn menu mục tiêu để gán các submenu:</label>
                        <select id="selectTargetMenuInGroup" class="form-control"></select>
                    </div>
                    <!--
                    <label>Gán sub menu:</label>
                    <select id="selectSubMenu" class="form-control" multiple></select>
                    <small class="form-text text-muted">Giữ Ctrl (hoặc Cmd) để chọn nhiều submenu</small>
                    <button type="button" class="btn btn-info" id="btnAssignSubmenuToMenu">
                        Gán submenu vào menu
                    </button>
                    -->
                </div>
                <div class="modal-footer d-flex flex-wrap justify-content-between gap-2">
                    <button type="submit" class="btn btn-success">Thêm menu đã có vào group</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </form>
        <form id="add-new-menu-to-group-form" style="display:none"></form>
    </div>
</div>



<!-- Main content -->
<div class="main-content">
    <!-- Header và breadcrumb -->
    <div class="page-header">
        <h2 class="header-title">Quản lý Menu</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/Admin/InterfaceAdmin/Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                <span class="breadcrumb-item active">Quản lý Menu</span>
            </nav>
        </div>
    </div>
    <!-- Content  -->
    <ul class="nav nav-tabs nav-justified" id="myTabJustified" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="menu-tab-justified" data-toggle="tab" href="#menu-justified" role="tab" aria-controls="menu-justified" aria-selected="true">Menus</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="group-tab-justified" data-toggle="tab" href="#group-justified" role="tab" aria-controls="group-justified" aria-selected="false">Groups</a>
        </li>
    </ul>
    <div class="tab-content m-t-15" id="myTabContentJustified">
        <div class="tab-pane fade show active" id="menu-justified" role="tabpanel" aria-labelledby="menu-tab-justified">
            <button id="openAddMenuModal" class="btn btn-primary mb-3">
                <i class="fas fa-plus"></i> Thêm Menu
            </button>
            <div class="card">
                <ul id="menu-list" class="list-group list-group-flush"></ul>
            </div>
        </div>
        <div class="tab-pane fade" id="group-justified" role="tabpanel" aria-labelledby="group-tab-justified">
            <div class="card">
                <button id="openAddGroupMenuModal" class="btn btn-primary mb-3">
                    <i class="fas fa-plus"></i> Thêm Group
                </button>
                <div id="groupMenuTabsContainer"></div>
            </div>
        </div>

    </div>
</div>


@section scriptsAdmin{
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <link href="~/Areas/assets/css/app.min.css" rel="stylesheet" />
    <script src="~/Areas/assets/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/Areas/assets/css/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Areas/assets/js/sweetalert2@11.js"></script>
    <script src="~/Areas/assets/js/OptionPhanQuyen.js"></script>
    <script src="~/Areas/Admin/Scripts/MenuScript.js"></script>
    <script src="~/Areas/Admin/Scripts/GroupMenuAdminScript.js"></script>
}