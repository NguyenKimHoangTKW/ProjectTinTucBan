@model ProjectTinTucBan.Models.Menu_by_sub

@{
    ViewBag.Title = "Quản lý Menu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="~/Areas/Admin/Scripts/MenuScript.js"></script>

<!-- Add Menu Modal -->
<div class="modal fade" id="addMenuModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Menu mới</h5>
                <button type="button" class="close" aria-label="Close" id="closeAddMenuModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-menu-form">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="menuName">Tên menu <span style="color:red">*</span>:</label>
                        <input type="text" class="form-control" id="menuName" name="menuName" required maxlength="100" />
                    </div>
                    <div class="form-group">
                        <label for="menuLink">Link:</label>
                        <input type="text" class="form-control" id="menuLink" name="menuLink" maxlength="255" />
                    </div>
                    <div class="form-group">
                        <label for="thuTuShow">Thứ tự hiển thị:</label>
                        <input type="number" class="form-control" id="thuTuShow" name="thuTuShow" min="0" max="1000" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="closeAddMenuModalFooter">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>

                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add SubMenu Modal -->
<div class="modal fade" id="addSubMenuModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Menu Con</h5>
                <button type="button" class="close" aria-label="Close" id="closeAddSubMenuModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-submenu-form">
                <div class="modal-body">
                    <input type="hidden" id="parentMenuId" name="parentMenuId" />
                    <div class="form-group">
                        <label for="subMenuName">Tên menu con <span style="color:red">*</span>:</label>
                        <input type="text" class="form-control" id="subMenuName" name="subMenuName" required maxlength="100" />
                    </div>
                    <div class="form-group">
                        <label for="subLink">Link:</label>
                        <input type="text" class="form-control" id="subLink" name="subLink" required maxlength="120" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="closeAddSubMenuModalFooter">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>

                </div>
            </form>
        </div>
    </div>
</div>

<!-- Main content -->
<div class="main-content">
    <button id="openAddMenuModal" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Thêm Menu
    </button>
    <ul id="menu-list" class="list-group list-group-flush"></ul>
</div>
