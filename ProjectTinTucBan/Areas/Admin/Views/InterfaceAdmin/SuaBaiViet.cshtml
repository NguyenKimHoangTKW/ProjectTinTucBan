@{
    ViewBag.Title = "SuaBaiViet";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var baiVietId = Request.QueryString["id"];
}

<div class="main-content">
    <h2 class="mb-4">Sửa Bài Viết</h2>

    <form id="formSuaBaiViet">
        <input type="hidden" id="BaiVietID" value="@baiVietId" />

        <div class="form-group">
            <label for="TieuDe">Tiêu đề</label>
            <input type="text" id="TieuDe" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="NoiDung">Nội dung</label>
            <textarea id="NoiDung" class="form-control" rows="10" required></textarea>
        </div>

        <div class="form-group">
            <label for="ThumbnailFile">Thumbnail</label>
            <input type="file" id="ThumbnailFile" class="form-control-file" />
            <input type="hidden" id="LinkThumbnail" />
            <div id="previewThumbnail" class="mt-2"></div>
        </div>

        <div class="form-group">
            <label for="PdfFile">PDF</label>
            <input type="file" id="PdfFile" class="form-control-file" />
            <input type="hidden" id="LinkPDF" />
            <div id="previewPDF" class="mt-2"></div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a href="/Admin/InterfaceAdmin/BaiViet" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>

@section scriptsAdmin {
    <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
    <script src="~/Areas/Admin/Scripts/SuaBaiViet.js"></script>
}
