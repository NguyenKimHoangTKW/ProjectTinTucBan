@model ProjectTinTucBan.Models.BaiViet

@{
    ViewBag.Title = "Xem Nội Dung";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Nội dung bài viết</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="https://tdmu.edu.vn/hinh/Icon.png" />

    <!-- CSS: Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Style tùy chỉnh -->
    <style>
        body {
            background: linear-gradient(to right, #e3f2fd, #bbdefb);
        }

        .main-content {
            width: 100%;
            max-width: 750px;
            margin: 0 auto;
            background: #fff;
            border-radius: 0;
            padding: 20px;
            box-shadow: none;
        }

        .title {
            text-align: center;
            color: #0d47a1;
            text-transform: uppercase;
            font-weight: bold;
            margin-bottom: 30px;
            border-bottom: 2px solid #90caf9;
            padding-bottom: 10px;
        }

        #xemNoiDungContainer {
            max-width: 800px;
            margin: 0 auto;
        }

        .cke_editable {
            overflow-wrap: break-word;
            word-break: break-word;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #000;
            font-size: 14px;
            line-height: 1.6;
        }

            .cke_editable img {
                display: block;
                margin: 10px auto;
                max-width: 100% !important;
                height: auto !important;
            }

        .cke_contents {
            min-height: 400px !important;
        }

        img.portrait {
            max-height: 600px;
            width: auto;
        }

        img.landscape {
            max-width: 100%;
            height: auto;
        }

        img {
            page-break-inside: avoid;
            break-inside: avoid;
        }

        h2, p, table, div {
            page-break-inside: avoid;
            break-inside: avoid;
        }

        textarea#NoiDung {
            min-height: 400px;
        }
    </style>
</head>
<body>
    <div class="main-content">
        <h2 class="title">@Model.TieuDe</h2>

        <!-- ID ẩn -->
        <input type="hidden" id="BaiVietID" value="@Model.ID" />

        <!-- CKEditor -->
        <div id="xemNoiDungContainer">
            <textarea id="NoiDung">@Html.Raw(Model.NoiDung)</textarea>
        </div>

        <!-- Nút thao tác -->
        <div class="mt-4 text-right">
            <button id="btnQuayLai" class="btn btn-outline-dark ml-2">Quay lại</button>
            <button id="btnLuuNoiDung" class="btn btn-primary">Lưu Nội Dung</button>
            <button id="btnPreviewPdf" class="btn btn-secondary ml-2">Xem trước PDF</button>
        </div>
    </div>

    <!-- Script: jQuery, CKEditor, SweetAlert2, html2pdf -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.21.0/full/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

    <!-- Script riêng -->
    <script src="~/Areas/Admin/Scripts/XemNoiDung.js"></script>
</body>
</html>
