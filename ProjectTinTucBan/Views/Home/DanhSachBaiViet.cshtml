@model ProjectTinTucBan.Models.BaiViet
@{
    ViewBag.Title = ViewBag.TenMucLuc ?? "Danh sách bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var mucId = ViewBag.MucId;
    var mucTenCoDau = ViewBag.TenMucLuc ?? "";
}

<head>
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        /* Swiper điều hướng */
        .swiper-button-prev,
        .swiper-button-next {
            color: white;
            width: 40px;
            height: 40px;
            background-color: rgba(0, 0, 0, 0.4);
            border-radius: 9999px;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10;
            top: 50%;
            transform: translateY(-50%);
            transition: background-color 0.3s;
        }

            .swiper-button-prev:hover,
            .swiper-button-next:hover {
                background-color: rgba(0, 0, 0, 0.6);
            }

            .swiper-button-prev::after,
            .swiper-button-next::after {
                font-size: 20px;
                font-weight: bold;
            }

        .swiper-button-prev {
            left: 16px;
        }

        .swiper-button-next {
            right: 16px;
        }
        
        .swiper {
            width: 100vw;
            height: 600px; /* hoặc dùng h-[600px] nếu Tailwind */
        }


        .swiper-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }
        .swiper-pagination-bullet {
            width: 30px;
            height: 4px;
            background: rgba(255, 255, 255, 0.5);
            opacity: 1;
            margin: 0 4px !important;
            border-radius: 0;
            transition: background 0.3s;
        }

        .swiper-pagination-bullet-active {
            background: white;
        }
        .loader {
          border: 4px solid #e5e7eb;
          border-top: 4px solid #3b82f6;
          border-radius: 50%;
          width: 36px;
          height: 36px;
          animation: spin 0.8s linear infinite;
        }
        @@keyframes spin {
          0% { transform: rotate(0deg); }
          100% { transform: rotate(360deg); }
        }

    .swiper-button-prev::after,
    .swiper-button-next::after {
    font-size: 24px;
    }
    </style>
</head>

<!-- Banner -->
<section class="w-full relative">
    <div class="swiper mySwiper w-full h-[600px] overflow-hidden relative">
        <div class="swiper-wrapper" id="slider-container">
            <!-- Ảnh được load động từ JS -->
        </div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-pagination"></div>
    </div>
</section>

<!-- Breadcrumb -->
<div id="breadcrumbContainer" class="container mx-auto px-4 mt-6"></div>

<!-- Tiêu đề mục lục -->
<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="border border-blue-300 rounded shadow bg-gray-100 p-4 mb-6">
        <h1 class="text-2xl font-bold text-left text-blue-800 uppercase">
            @mucTenCoDau
        </h1>
    </div>

    <!-- 🔍 Ô tìm kiếm -->
    <div class="mb-6 flex flex-col sm:flex-row items-center gap-2">
        <input id="searchInput" type="text" placeholder="Nhập từ khóa tìm bài viết..."
               class="w-full sm:w-1/2 border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
    </div>

    <!-- Danh sách bài viết -->
    <div class="max-w-7xl mx-auto px-4">
        <div id="tinTucList" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-10">
            <!-- Các bài viết sẽ được JavaScript render tại đây -->
        </div>
        <!-- Loading Indicator -->
        <div id="loadingIndicator" class="w-full text-center py-4 hidden">
            <div class="inline-flex items-center space-x-2 text-blue-600">
                <svg class="animate-spin h-5 w-5 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8z"></path>
                </svg>
                <span>Đang tải dữ liệu...</span>
            </div>
        </div>

        <!-- Nút điều khiển -->
        <div class="text-center mt-6" id="btnXemThemWrapper">
            <button id="btnXemThem" class="inline-block border border-gray-300 hover:border-orange-600 text-gray-700 hover:text-orange-600 px-6 py-2 rounded transition">
                XEM THÊM
            </button>
            <button id="btnAnBot" class="hidden ml-3 inline-block border border-gray-500 text-gray-700 hover:bg-gray-200 px-6 py-2 rounded transition">
                ẨN BỚT
            </button>
            <a id="btnXemTatCa" href="#" class="ml-3 inline-block border border-blue-600 text-blue-700 hover:bg-blue-600 hover:text-white px-6 py-2 rounded transition">
                XEM TẤT CẢ
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <script>
        // Truyền biến Razor -> JS
        window.mucIdFromView = @Html.Raw(mucId ?? "0");
        window.mucTen = "@mucTenCoDau";    
    </script>

    <!-- Script quản lý bài viết -->
    <script src="~/Scripts/Scripts/DanhSachBaiViet.js"></script>
}
