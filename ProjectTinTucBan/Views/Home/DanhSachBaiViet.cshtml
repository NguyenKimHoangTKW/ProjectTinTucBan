@model ProjectTinTucBan.Models.BaiViet
@{
    ViewBag.Title = ViewBag.TenMucLuc ?? "Danh sách bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var mucId = ViewBag.MucId;
    var mucTenCoDau = ViewBag.TenMucLuc ?? "";
}

<head>
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        .swiper-button-prev,
        .swiper-button-next {
            color: white;
            filter: drop-shadow(0 0 4px black);
        }

            .swiper-button-prev::after,
            .swiper-button-next::after {
                font-size: 24px;
            }
    </style>
</head>

<!-- Banner -->
<section class="w-full">
    <div class="swiper mySwiper w-full h-[400px] overflow-hidden">
        <div class="swiper-wrapper" id="slider-container"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
    </div>
</section>

<!-- Breadcrumb -->
<div id="breadcrumbContainer" class="container mx-auto px-4 mt-6"></div>

<!-- Tiêu đề mục lục -->
<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="border border-blue-300 rounded shadow bg-gray-100 p-4 mb-6">
        <h1 class="text-2xl font-bold text-left text-blue-800 uppercase">
            @mucTenCoDau
        </h1>
    </div>

    <!-- 🔍 Ô tìm kiếm -->
    <div class="mb-6 flex flex-col sm:flex-row items-center gap-2">
        <input id="searchInput" type="text" placeholder="Nhập từ khóa tìm bài viết..."
               class="w-full sm:w-1/2 border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <button id="btnSearch"
                class="bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700 transition">
            <i class="fas fa-search mr-2"></i>Tìm kiếm
        </button>
    </div>

    <!-- Danh sách bài viết -->
    <div class="max-w-7xl mx-auto px-4">
        <div id="tinTucList" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-10">
            <!-- Các bài viết sẽ được JavaScript render tại đây -->
        </div>

        <!-- Nút điều khiển -->
        <div class="text-center mt-6" id="btnXemThemWrapper">
            <button id="btnXemThem" class="inline-block border border-gray-300 hover:border-orange-600 text-gray-700 hover:text-orange-600 px-6 py-2 rounded transition">
                XEM THÊM
            </button>
            <button id="btnAnBot" class="hidden ml-3 inline-block border border-gray-500 text-gray-700 hover:bg-gray-200 px-6 py-2 rounded transition">
                ẨN BỚT
            </button>
            <a id="btnXemTatCa" href="#" class="ml-3 inline-block border border-blue-600 text-blue-700 hover:bg-blue-600 hover:text-white px-6 py-2 rounded transition">
                XEM TẤT CẢ
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <script>
        // Truyền biến Razor -> JS
        window.mucIdFromView = @Html.Raw(mucId ?? "0");
        window.mucTen = "@mucTenCoDau";

        $(document).ready(function () {
            // Load banner slider
            $.get("/api/v1/home/get-slider", function (data) {
                let html = "";
                if (!data || data.length === 0) {
                    html = `<div class="swiper-slide flex items-center justify-center text-center h-full">
                                <p class="text-gray-500 text-xl">Không có banner hiển thị</p>
                            </div>`;
                } else {
                    data.forEach(item => {
                        html += `
                            <div class="swiper-slide relative">
                                <img loading="lazy"
                                     src="${item.LinkHinh}"
                                     onerror="this.src='/images/fallback.jpg'"
                                     alt="${item.TieuDe || 'Banner'}"
                                     class="w-full h-full object-cover rounded-md" />
                                ${item.TieuDe ? `<div class="absolute bottom-4 left-4 bg-black bg-opacity-50 text-white p-3 rounded text-lg max-w-[90%]">${item.TieuDe}</div>` : ""}
                            </div>`;
                    });
                }

                $("#slider-container").html(html);

                new Swiper(".mySwiper", {
                    loop: true,
                    autoplay: { delay: 3000, disableOnInteraction: false },
                    pagination: { el: ".swiper-pagination", clickable: true },
                    navigation: {
                        nextEl: ".swiper-button-next",
                        prevEl: ".swiper-button-prev"
                    }
                });
            });
        });
    </script>

    <!-- Script quản lý bài viết -->
    <script src="~/Scripts/Scripts/DanhSachBaiViet.js"></script>
}
