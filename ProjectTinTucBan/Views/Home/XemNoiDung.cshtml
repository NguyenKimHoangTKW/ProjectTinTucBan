@model ProjectTinTucBan.Models.BaiViet

@{
    ViewBag.Title = "Xem nội dung bài viết";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .noi-dung-bai-viet img,
        .noi-dung-bai-viet iframe,
        .noi-dung-bai-viet table {
            max-width: 100% !important;
            height: auto;
            display: block;
            margin: 1rem auto;
            border-radius: 0.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        aside img {
            height: 150px;
            object-fit: cover;
            border-radius: 0.375rem;
        }

        .pdf-list a {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem;
            border: 1px solid #e5e7eb;
            border-radius: 0.375rem;
            background-color: #f9fafb;
            color: #1d4ed8;
            text-decoration: none;
            transition: background-color 0.2s ease-in-out;
        }

            .pdf-list a:hover {
                background-color: #e0f2fe;
            }
    </style>
</head>
<body class="bg-gray-50 text-gray-800" data-post-id="@Model.ID">
    <!-- Breadcrumb -->
    <div class="bg-gray-100 py-3 border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-sm text-gray-600" id="breadcrumbContainer">
                <!-- JS sẽ render breadcrumb -->
            </div>
        </div>
    </div>

    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Nút quay lại -->
        <div class="mb-6">
            <a href="javascript:history.back()" class="inline-flex items-center px-4 py-2 text-sm text-blue-700 border border-blue-200 rounded hover:bg-blue-50 transition">
                <i class="fas fa-arrow-left mr-2"></i> Quay lại
            </a>
        </div>

        <!-- Bố cục 2 cột -->
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Cột trái: nội dung bài viết -->
            <div class="lg:w-2/3 w-full bg-white rounded-xl shadow-md p-6">
                <div id="baivietContainer" class="noi-dung-bai-viet text-base leading-relaxed">
                    <p class="text-center text-gray-500">Đang tải nội dung...</p>
                </div>
            </div>

            <!-- Cột phải: bài viết cùng mục -->
            <aside class="lg:w-1/3 w-full bg-white p-6 rounded-xl shadow-md">
                <p id="tenMucLuc" class="text-red-600 font-semibold uppercase text-base mb-4 border-b border-red-500 pb-2 tracking-wider">
                    Đang tải mục lục...
                </p>

                <h2 class="text-xl font-bold text-gray-800 mb-4">Các bài viết liên quan</h2>
                <div id="mucLucBaiViet" class="space-y-4">
                    <!-- JS sẽ render tại đây -->
                </div>
            </aside>
        </div>
    </section>

    <script src="~/Scripts/XemNoiDung.js"></script>
</body>
</html>
