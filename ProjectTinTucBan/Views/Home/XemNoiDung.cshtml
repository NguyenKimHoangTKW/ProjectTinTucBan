@model ProjectTinTucBan.Models.BaiViet

@{
    ViewBag.Title = "Xem Nội Dung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md p-6 mt-6 relative overflow-hidden">
    <!-- Nút quay lại -->
    <a href="javascript:history.back()"
       class="absolute top-4 left-4 flex items-center gap-2 bg-blue-100 text-blue-700 hover:bg-blue-200 px-3 py-1 rounded-full shadow transition text-sm font-semibold">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
             class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd"
                  d="M15 8a.5.5 0 0 1-.5.5H3.707l4.147 4.146a.5.5 0 0 1-.708.708l-5-5a.5.5 0 0 1 0-.708l5-5a.5.5 0 1 1 .708.708L3.707 7.5H14.5A.5.5 0 0 1 15 8z" />
        </svg>
        Quay lại
    </a>

    <!-- Tiêu đề -->
    <h2 class="text-2xl md:text-3xl font-bold text-center text-blue-800 uppercase mb-6 mt-4">
        @Model.TieuDe
    </h2>

    <!-- Nội dung -->
    <div class="prose max-w-none text-justify text-gray-800 leading-relaxed"
         style="font-size: 1.1rem; word-wrap: break-word; overflow-wrap: break-word; word-break: break-word;">
        @Html.Raw(Model.NoiDung)
    </div>
</div>