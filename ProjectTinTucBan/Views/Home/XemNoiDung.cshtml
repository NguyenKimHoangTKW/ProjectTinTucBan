@model ProjectTinTucBan.Models.BaiViet

@{
    ViewBag.Title = "Xem nội dung bài viết";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .noi-dung-bai-viet img,
        .noi-dung-bai-viet iframe,
        .noi-dung-bai-viet table {
            max-width: 100% !important;
            height: auto;
            display: block;
            margin: 1rem auto;
            word-break: break-word;
        }

        aside img {
            height: 150px;
            object-fit: cover;
        }

        /* Danh sách PDF */
        .pdf-list a {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem;
            border: 1px solid #e5e7eb;
            border-radius: 0.375rem;
            background-color: #f9fafb;
            color: #1d4ed8;
            text-decoration: none;
            transition: background-color 0.2s ease-in-out;
        }

            .pdf-list a:hover {
                background-color: #e0f2fe;
            }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- Breadcrumb -->
    <div class="bg-gray-100 py-2">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-sm text-gray-600 flex justify-between items-center">
            <div></div>
            <div id="breadcrumbContainer" class="text-sm text-gray-600"></div>
        </div>
    </div>

    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <!-- Nút quay lại -->
        <div class="mb-4">
            <a href="javascript:history.back()" class="inline-flex items-center text-sm text-gray-600 hover:text-blue-600">
                <i class="fas fa-chevron-left mr-2"></i> Quay trở lại
            </a>
        </div>

        <!-- Bố cục chia 2 cột -->
        <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
            <!-- Nội dung bài viết -->
            <div id="baivietContainer" class="md:col-span-8">
                <p class="text-center text-gray-500">Đang tải nội dung...</p>
            </div>

            <!-- Sidebar: bài viết liên quan -->
            <aside class="md:col-span-4 bg-white p-4 md:sticky md:top-[100px] ">
                <p id="tenMucLuc" class="text-red-700 font-bold uppercase text-base mb-4 border-b border-red-600 pb-2">
                    Đang tải...
                </p>

                <h2 class="text-lg font-semibold text-gray-800 mb-4"></h2>

                <div id="mucLucBaiViet" class="space-y-4">
                    <!-- Các bài viết sẽ được JS đẩy vào đây với khung viền như yêu cầu -->
                </div>
            </aside>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script>
        window.postId = @Model.ID;
    </script>
    <script src="~/Scripts/XemNoiDung.js"></script>
</body>
</html>
