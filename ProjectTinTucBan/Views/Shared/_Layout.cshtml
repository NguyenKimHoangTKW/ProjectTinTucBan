@{ Layout = null; }

<!DOCTYPE html>
<html lang="vi" class="overflow-x-hidden">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title – ĐBCL TDMU</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            font-size: 1rem;
        }
    </style>
</head>
<body class="bg-white text-gray-800 overflow-x-hidden">
    <!-- Top bar -->
    <div class="bg-[#29A3E0] text-white text-sm">
        <div class="max-w-7xl mx-auto flex flex-wrap justify-between items-center gap-y-2 px-4 py-2">
            <div class="flex flex-wrap items-center gap-2 text-xs sm:text-sm">
                <span>📧 Bdbcl@tdmu.edu.vn</span>
                <span>📞 (0274) 3822518-3-114</span>
            </div>
            <div class="flex flex-wrap gap-x-4 gap-y-1 text-xs sm:text-sm">
                <a href="#" class="hover:underline">Trang chủ TDMU</a>
                <a href="#" class="hover:underline">Cổng thông tin GV | SV</a>
                <a href="#" class="hover:underline">Lịch công tác</a>
                <a href="#" class="hover:underline">Liên kết</a>
                <a href="#" class="hover:underline">Liên hệ</a>
            </div>
        </div>
    </div>

    <!-- Logo và Navbar -->
    <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between px-4 py-3 border-b gap-4">
            <!-- Logo -->
            <div class="flex items-center gap-4">
                <img src="https://bdbcl.tdmu.edu.vn/img/Logo-BKTKD-BCL.jpg" alt="Logo ĐBCL TDMU" class="max-h-16 w-auto" />
            </div>

            <!-- Main Navigation -->
            <nav class="flex flex-wrap justify-center md:justify-end items-center gap-4 font-semibold text-black text-sm sm:text-base">
                <a href="#" class="text-blue-600 border-b-2 border-blue-600 pb-1">TRANG CHỦ</a>
                <div class="relative group">
                    <button class="hover:text-blue-600 flex items-center gap-1">
                        GIỚI THIỆU
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2"
                             viewBox="0 0 24 24">
                            <path d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <!-- Dropdown -->
                    <ul class="absolute hidden group-hover:block mt-2 bg-white text-black rounded shadow-md w-56 z-50">
                        <li><a href="#" class="block px-4 py-2 hover:bg-gray-100">Chức năng - Nhiệm vụ</a></li>
                        <li><a href="#" class="block px-4 py-2 hover:bg-gray-100">Sơ đồ tổ chức</a></li>
                    </ul>
                </div>
                <a href="#" class="hover:text-blue-600">TIN TỨC</a>
                <a href="#" class="hover:text-blue-600">KHẢO THÍ</a>
                <a href="#" class="hover:text-blue-600">KIỂM ĐỊNH</a>
                <a href="#" class="hover:text-blue-600">VĂN BẢN</a>
            </nav>
        </div>
    </header>

    <!-- Nội dung chính -->
    <main class="max-w-7xl mx-auto px-4 py-6">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-[#29A3E0] text-white text-sm py-6">
        <div class="max-w-7xl mx-auto px-4 space-y-2">
            <p>&copy; 2021 Bản quyền thuộc Ban Khảo thí, kiểm định và đảm bảo chất lượng – Trường đại học Thủ Dầu Một</p>
            <p>Ghi rõ nguồn "Trường đại học Thủ Dầu Một" khi sử dụng lại nội dung trên cổng thông tin.</p>
        </div>
    </footer>

    <!-- Back to top button -->
    <button id="backToTop"
            class="hidden fixed bottom-6 right-6 bg-blue-600 text-white p-3 rounded-full shadow-lg hover:bg-blue-700 transition"
            title="Lên đầu trang">
        ↑
    </button>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        const btn = document.getElementById("backToTop");
        window.addEventListener("scroll", () => {
            btn.classList.toggle("hidden", window.scrollY <= 200);
        });
        btn.addEventListener("click", () => {
            window.scrollTo({ top: 0, behavior: "smooth" });
        });
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
