@model ProjectTinTucBan.Models.BaiViet
@{
    ViewBag.Title = Model.TieuDe;
}

<section class="max-w-3xl mx-auto p-4 bg-white shadow rounded">
    <h1 class="text-xl font-bold text-blue-700 mb-2">@Model.TieuDe</h1>
    <p class="text-gray-500 text-sm mb-4">
        🕒 Ngày đăng: @Model.NgayDang.ToString().Insert(6, "/").Insert(4, "/")
    </p>

    @if (!string.IsNullOrEmpty(Model.LinkThumbnail))
    {
        <img src="@Model.LinkThumbnail" alt="Ảnh bài viết" class="w-full max-h-96 object-cover mb-4 rounded" />
    }

    <div class="prose max-w-none">
        @Html.Raw(Model.NoiDung)
    </div>

    @if (!string.IsNullOrEmpty(Model.LinkPDF))
    {
        <div class="mt-6">
            <a href="@Model.LinkPDF" target="_blank" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
                📄 Xem PDF đính kèm
            </a>
        </div>
    }

</section>


